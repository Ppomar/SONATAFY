
@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
@*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>*@
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/Content/Scripts/SalesScript.js"></script>

<br />
<div class="col-md-12">
    <h2>Sales</h2>
</div>

<br />
<div class="col-md-12">
    <div class="form-group row">
        <div class="col-md-3">
            <input id="txtProductId" type="hidden" />
            <input id="txtSearchProduct" class="form-control" placeholder="Search Product ..." />
        </div>
        <button id="btnAddProduct" type="button" class="btn btn-primary" >Add Product</button>
    </div>
</div>
<br />

<div class="col-md-12">
    <div class="form-group row">
        <div class="col-md-3">
            <button id="btnCash" type="button" class="btn btn-warning" style="margin-left:7px;">Cash</button>
        </div>
    </div>
</div>

<br />
<div class="col-md-12">
    <table id="tblProducts" class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Presentation</th>
                <th>Price</th>
                <th>Taxe</th>
                <th>Category</th>               
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    var urlFilterProducts = "@Url.Action("FilterProducts", "Product")";
    var UrlGetByIdProduct = "@Url.Action("GetByIdProduct", "Product")";
